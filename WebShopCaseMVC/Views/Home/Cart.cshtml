<!--This page has a list with the Cart. -->
@model IEnumerable<Model.Article>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalWithoutVAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalWithVAT)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalWithoutVAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalWithVAT)
                </td>

                <td onclick="removeItemFromCart(@item.Id,$(this))" class="pointer">Remove</td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("CheckOut", "Checkout")
    </p>
}
else
{
    <div>Please add an item to the cart</div>
  
}